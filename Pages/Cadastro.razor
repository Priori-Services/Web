@page "/cadastro"

<div class="MarginLogin">

    <style>
        .MarginLogin {
            padding-right: 60ex;
            padding-left: 60ex;
            padding-top: 4ex;
        }
    </style>

<!-- Pills navs -->
<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
  <li class="PrioriHeader nav-item" role="presentation" type="text" 
  style="font-size: 2.4em; margin-top: -1.5rem; margin-bottom: 3rex;">
    Cadastro
  </li>
</ul>
<!-- Pills navs -->

<!-- Pills content -->
<div class="tab-pane" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
    <form>

      <div class="form-outline mb-4">
            <label class="form-label" for="registrarNome">Nome Completo</label>
            <input type="text" id="nomeCadastro" class="form-control" />
    </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="registrarCPF">CPF</label>
        <input type="text" id="cpfCadastro" class="form-control" />
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="registrarDataNASCIMENTO">Data de Nascimento</label>
        <input type="date" id="dataNascimentoCadastro" class="form-control" />
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="registrarEmail">Email</label>
        <input type="email" id="emailCadastro" class="form-control" />
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="registerPassword">Senha</label>
        <input type="password" id="senhaLogin" class="form-control" />
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="registerRepeatPassword">Confirme sua senha</label>
        <input type="password" id="confirmacaoSenhaLogin" class="form-control" />
      </div>

      <!-- Checkbox -->
      <div class="form-check d-flex justify-content-center mb-4">
        <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked
          aria-describedby="registerCheckHelpText" />
        <label class="form-check-label" for="registerCheck">
          Li e concordo com os termos de uso
        </label>
      </div>

      <!-- Submit button -->
      <div class="form-check d-flex justify-content-center mb-4">
      <button type="submit" class="btn btn-primary btn-block">CADASTRAR</button>
      </div>

    </form>
  </div>
</div>