@using PRIORI_SERVICES_WEB.Data.Model

<style>
    html,
    body {
        @(BackgroundGradients.BackgroundPrincipal);
    }
</style>

<div class="container-fluid p-3">
    <div class="accordion accordion-flush" id="@AccordionRoot">
        @if (Faqs != null)
        {
            @foreach (var Faq in Faqs)
            {
                <div class="accordion-item p-3 text-dark m-3 rounded-4">
                    <h2 class="accordion-header bg-white rounded-5" id=@Faq.HeadingId>
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#@Faq.UniqueId" aria-expanded="true" aria-controls="@Faq.UniqueId">
                            <i class="bi bi-question-circle mx-3 fs-3" />
                            @Faq.Header
                        </button>
                    </h2>
                    <div id=@Faq.UniqueId class="bg-white text-dark accordion-collapse collapse"
                        aria-labelledby="@Faq.HeadingId" data-bs-parent="#@AccordionRoot">
                        <div class="accordion-body">
                            <p>@Faq.Body</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private String AccordionRoot = $"AccordionRoot-[{Guid.NewGuid()}]";

    [Parameter]
    public FaqItem[]? Faqs { get; set; }
}
